{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Avis{% endblock %}

{% block body %}
<div class="container-fluid"></div>
<h1 class="text-center text-white mt-4 pt-4 display-1 fw-bold"> Avis </h1>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 bg-white p-4 m-0 text-black">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr class="fw-bold text-black">
                        <th scope="col">Nom</th>
                        <th scope="col">Message</th>
                        <th scope="col">Email</th>
                        <th scope="col">Note</th>
                        <th scope="col">Date d'envoi</th>

                    </tr>
                </thead>
                <tbody>
                    {% for avis in avis |sort((a, b) => b.dateEnvoi <=> a.dateEnvoi) %}
                    <tr class="{{ cycle(['table-black', 'table-black'], loop.index0) }}">
                        <td>{{ avis.nom | capitalize }}</td>
                        <td>{{ avis.message | capitalize }}</td>
                        <td>{{ avis.email | lower }}</td>
                        <td>{{ avis.note | lower }}</td>
                        <td>{{ avis.dateEnvoi | date("d-m-Y Ã  H:i:s") }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

{% endblock %}